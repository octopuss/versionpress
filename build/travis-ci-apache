<VirtualHost *:80>
 
  DocumentRoot "%TRAVIS_BUILD_DIR%"
  ServerName localhost

  LoadModule php5_module /home/ubuntu/.phpenv/versions/7.0.3/libexec/apache2/libphp5.so


  <Directory %TRAVIS_BUILD_DIR%/*>
    Options FollowSymLinks
    AllowOverride None
    RewriteEngine On
  </Directory>

  <FilesMatch \.php$>
    SetHandler application/x-httpd-php
  </FilesMatch>


</VirtualHost>